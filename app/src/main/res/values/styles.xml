<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="my_own_text_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:layout_marginRight">@dimen/margin_25</item>
        <item name="android:layout_marginLeft">@dimen/margin_25</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_12</item>
        <item name="textAllCaps">true</item>
    </style>



</resources>